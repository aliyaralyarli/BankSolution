@model Product
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_CardLayout.cshtml";
}

<div class="page-body">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-block">
                    <h4 class="sub-title">Cari karti redakte etmek</h4>
                    <form method="post">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label required" asp-for="CardNumber"></label>
                            <div class="col-sm-10">
                                <input class="form-control" placeholder="Kartin nomresini daxil edin" asp-for="CardNumber" />
                                <span asp-validation-for="CardNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" asp-for="ExpireDate"></label>
                            <div class="col-sm-10">
                                <input class="form-control" placeholder="Kartin son bitme vaxtini daxil edin" asp-for="ExpireDate" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-12">
                                <input type="text" asp-for="Id" />
                                <a class="btn btn-info btn-square" asp-action="Cards">
                                    Siyahıya qayıt
                                </a>
                                <button class="btn btn-warning btn-square" type="submit">
                                    Redaktə et
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>